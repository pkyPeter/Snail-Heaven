{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "max-len": [
            "warn",
            { "code": 80 }
        ],
        "no-unused-vars": [
            "warn",
             { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "no-undef": [
            "warn", 
            { "typeof": true }
        ]
    }
}